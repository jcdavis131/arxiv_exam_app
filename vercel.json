{
  "version": 2,
  "builds": [
    {
      "src": "static/**",
      "use": "@vercel/static-build"
    },
    {
      "src": "arxiv_exam_app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "arxiv_exam_app.py"
    },
    {
      "src": "/(.*)",
      "dest": "static/$1"
    }
  ]
}